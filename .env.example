# Tado Exporter Configuration
# Copy this file to .env and update with your values

# Required: Passphrase to encrypt/decrypt Tado token
# Use a secure, random string of at least 12 characters
TADO_TOKEN_PASSPHRASE=your_secure_passphrase_here

# Optional: Path to store encrypted token (default: ~/.tado-exporter/token.json)
# TADO_TOKEN_PATH=/path/to/token.json

# Optional: HTTP server port (default: 9100)
# TADO_PORT=9100

# Optional: Tado Home ID for filtering (auto-detect if not provided)
# TADO_HOME_ID=123456

# Optional: Metrics collection timeout in seconds (default: 10)
# TADO_SCRAPE_TIMEOUT=10
